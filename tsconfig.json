{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    // JSX (only needed if you're doing React)
    "jsx": "react-jsx",

    // Important for const enum inlining
    "isolatedModules": false,
    "preserveConstEnums": false,

    // Module resolution
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",

    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,

    "lib": ["ES2015", "DOM"]
  }
}
